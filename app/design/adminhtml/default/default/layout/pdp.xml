			<action method="addItem"><type>js_css</type><name>pdp/css/multiupload.css</name></action>
			<!-- Multiupload -->
			<action method="addItem"><type>js</type><name>pdp/js/jquery.min.js</name></action>
			<action method="addItem"><type>js</type><name>pdp/js/backend/upload.js</name></action>
		</reference>
		<reference name="content">
            <block type="pdp/adminhtml_pdp" name="upload_form" template="pdp/upload.phtml"/>
