			<action method="addItem"><type>js_css</type><name>pdp/css/bootstrap.css</name></action>
			<action method="addItem"><type>js_css</type><name>pdp/css/idesign.css</name></action>
			<action method="addItem"><type>js_css</type><name>pdp/css/multiupload.css</name></action>
			<action method="addItem"><type>js_css</type><name>pdp/css/colorpicker.css</name></action>
		</reference>
		<reference name="content">
            <block type="pdp/adminhtml_pdp" name="pdp_image_form" template="pdp/image.phtml"/>
        </reference>
	</pdp_adminhtml_pdp_image>
	<pdp_adminhtml_pdp_font>
