			<action method="addItem"><type>js</type><name>pdp/js/backend/action.js</name></action>
			<action method="addItem"><type>js</type><name>pdp/js/backend/image.js</name></action>
            <action method="addItem"><type>js</type><name>pdp/js/backend/upload.js</name></action>
			<action method="addItem"><type>js</type><name>pdp/js/fabric.js</name></action>
			<!-- Color Picker -->
			<action method="addItem"><type>js</type><name>pdp/js/colorpicker.js</name></action>
