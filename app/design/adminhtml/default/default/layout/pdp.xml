	<pdp_adminhtml_pdp_artworkcolor>
		<reference name="head">
			<action method="addItem"><type>js</type><name>pdp/js/jquery.min.js</name></action>
			<action method="addItem"><type>js</type><name>pdp/js/bootstrap.min.js</name></action>
			<action method="addItem"><type>js</type><name>pdp/js/backend/multicolor.js</name></action>
			<!-- Color Picker -->
