		<fcpm translate="label" module="frontendconfigurableproductmatrix">
			<label>Configurable Products Matrix</label>
            <tab>b4mtab</tab>
            <frontend_type>text</frontend_type>
            <sort_order>50</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<groups>
                <basic_options translate="label">
                    <label>Basic Options</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enable>
						<product_level translate="label">
                            <label>Use product level settings</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </product_level>
						<matrix_template translate="label">
                            <label>Select Matrix Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>frontendconfigurableproductmatrix/system_config_source_matrixtemplate</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </matrix_template>
						<matrix_position translate="label">
                            <label>Select Matrix Position
							<![CDATA[<script type="text/javascript">document.observe('dom:loaded', function() {$('fcpm_basic_options_matrix_position').observe('change', fcpmShowHideDropdownConfigurable);function fcpmShowHideDropdownConfigurable(){if ($("fcpm_basic_options_matrix_position").value == 0 || $("fcpm_basic_options_matrix_position").value == 2) {$("fcpm_basic_options_showfdd").value = 0;}}});</script>]]>
							</label>
                            <frontend_type>select</frontend_type>
                            <source_model>frontendconfigurableproductmatrix/system_config_source_matrixposition</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </matrix_position>
						<show_link translate="label">
                            <label>Show Matrix Link</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </show_link>
