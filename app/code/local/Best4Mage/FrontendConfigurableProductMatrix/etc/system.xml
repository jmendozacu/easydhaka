                            <frontend_type>select</frontend_type>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </showfdd>
						<show_image>
							<label>Show Product Image</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
						</show_image>
						<second_attribute>
							<label>Second Attribute in Matrix
							<![CDATA[<script type="text/javascript">document.observe('dom:loaded', function(){ 							$('fcpm_basic_options_second_attribute').observe('change',fcpmSecondAttribute); function fcpmSecondAttribute() {if($("fcpm_basic_options_second_attribute").value==1){$("fcpm_basic_options_showfdd").value=1;$("row_fcpm_basic_options_second_attribute_position").show();} else {$("row_fcpm_basic_options_second_attribute_position").hide();}} fcpmSecondAttribute();});</script>]]>
							</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
						</second_attribute>
